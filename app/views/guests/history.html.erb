<h1>History</h1>
  <!-- Toggle: Everyone -->
  <div data-controller="toggle" class="mb-4">
    <button class="btn btn-secondary" data-action="click->toggle#toggle">
      <span data-toggle-target="label">Show/edit people</span>
    </button>

    <div class="mt-3 card card-body" data-toggle-target="panel" hidden>
      <h2 class="h5 mb-3">Everyone</h2>
      <ul class="list-group">
        <% @people.each do |person| %>
          <li class="list-group-item d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
              <strong><%= link_to person.name, reports_person_sign_ins_path(person), class: "text-decoration-none" %></strong>
              <% if person.archived? %>
                <span class="badge text-bg-secondary">Archived</span>
              <% end %>
            </div>
            <div class="d-flex gap-2">
              <%= link_to "Edit", edit_guest_path(person), class: "btn btn-sm btn-outline-primary" %>
              <% if person.archived? %>
                <%= button_to "Unarchive",
                              unarchive_guest_path(person),
                              method: :patch,
                              class: "btn btn-sm btn-success",
                              data: { turbo_confirm: "Unarchive #{person.name}?" } %>
              <% else %>
                <%= button_to "Archive",
                              archive_guest_path(person),
                              method: :patch,
                              class: "btn btn-sm btn-outline-warning",
                              data: { turbo_confirm: "Archive #{person.name}? They will be hidden from guest lists but still searchable." } %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
<% @grouped_sign_ins.each do |group_name, items| %>
  <% next if items.empty? %>
  <div class="mb-4" data-controller="toggle" data-toggle-show-text-value="Show <%= group_name %>" data-toggle-hide-text-value="Hide <%= group_name %>">
    <button class="btn btn-secondary" data-action="click->toggle#toggle">
      <span data-toggle-target="label">Show <%= group_name %></span>
      <span class="badge text-bg-light ms-2"><%= items.size %></span>
    </button>

    <div class="mt-3 card" data-toggle-target="panel" hidden>
      <div class="card-header d-flex justify-content-between align-items-center">
        <strong><%= group_name %></strong>
        <span class="text-muted"><%= items.size %> sign-in<%= "s" unless items.size == 1 %></span>
      </div>
      <div class="table-responsive">
        <table class="table table-sm mb-0 align-middle">
          <thead>
            <tr>
              <th>Person</th>
              <th>Arrived</th>
              <th>Left</th>
              <th class="text-end">Duration (min)</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% items.each do |sign_in| %>
              <tr id="<%= dom_id(sign_in) %>">
                <td>
                  <%= link_to sign_in.person.name, reports_person_sign_ins_path(sign_in.person) %>
                  <% if sign_in.person.archived? %>
                    <span class="badge text-bg-secondary ms-1">Archived</span>
                  <% end %>
                </td>
                <td><%= sign_in.arrived_at.strftime("%d/%m/%Y %H:%M") %></td>
                <td>
                  <% if sign_in.left_at.present? %>
                    <%= sign_in.left_at.strftime("%d/%m/%Y %H:%M") %>
                  <% else %>
                    <span class="badge text-bg-success">Still Present</span>
                  <% end %>
                </td>
                <td class="text-end"><%= sign_in.duration_in_minutes %></td>
                <td class="text-end d-flex justify-content-end gap-2">
                  <%= link_to "Edit", edit_guest_path(sign_in.person), class: "btn btn-sm btn-outline-primary" %>
                  <%= button_to "Delete",
                                sign_in_path(sign_in),
                                method: :delete,
                                data: { turbo_confirm: "Delete this sign-in for #{sign_in.person.name}?" },
                                class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<%= link_to "Group times", reports_category_averages_path, class: "btn btn-secondary mt-3" %>
<%= link_to "Back to Guests", root_path, class: "btn btn-secondary mt-3" %>
