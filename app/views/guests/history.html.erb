<h1>History</h1>
  <!-- Toggle: Everyone -->
  <div data-controller="toggle" class="mb-4">
    <button class="btn btn-secondary" data-action="click->toggle#toggle">
      <span data-toggle-target="label">Show/edit people</span>
    </button>

    <div class="mt-3 card card-body" data-toggle-target="panel" hidden>
      <h2 class="h5 mb-3">Everyone</h2>

      <% if defined?(@people) && @people.present? %>
        <ul class="list-group">
          <% @people.each do |person| %>
            <li class="list-group-item d-flex align-items-center justify-content-between">
              <div class="d-flex align-items-center gap-2">
                <strong>
                  <%= link_to person.name, reports_person_sign_ins_path(person), class: "text-decoration-none" %>
                </strong>
                <% if person.archived? %>
                  <span class="badge text-bg-secondary">Archived</span>
                <% end %>
              </div>
              <div class="d-flex gap-2">
                <%= link_to "Edit", edit_guest_path(person), class: "btn btn-sm btn-outline-primary" %>
                <% if person.archived? %>
                  <%= button_to "Unarchive",
                                unarchive_guest_path(person),
                                method: :patch,
                                class: "btn btn-sm btn-success",
                                data: { turbo_confirm: "Unarchive #{person.name}?" } %>
                <% else %>
                  <%= button_to "Archive",
                                archive_guest_path(person),
                                method: :patch,
                                class: "btn btn-sm btn-outline-warning",
                                data: { turbo_confirm: "Archive #{person.name}? They will be hidden from guest lists but still searchable." } %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">No people found.</p>
      <% end %>
    </div>
  </div>

<%# Notes grouped by day for meals-served totals (nil-safe) %>
<% notes_by_date = Note.all.group_by { |n| n.created_at&.to_date } %>

<%# Ensure we have grouped sign-ins; fall back to computing it here if controller didn't set it %>
<%
  grouped = if defined?(@grouped_sign_ins) && @grouped_sign_ins.present?
    @grouped_sign_ins
  else
    all_sign_ins = SignIn.includes(:person).order(arrived_at: :desc)
    {
      "Frypan Warriors"   => all_sign_ins.select { |s| s.arrived_at&.monday? },
      "Bible Study"   => all_sign_ins.select { |s| s.arrived_at&.tuesday? },
      "Smart Lunch"       => all_sign_ins.select { |s| s.arrived_at&.wednesday? },
      "Bathurst Buddies"  => all_sign_ins.select { |s| s.arrived_at&.friday? },
      "Cafe"              => all_sign_ins.select { |s| s.arrived_at&.saturday? || s.arrived_at&.sunday? }
    }
  end

  # Build a cache of people by id across everything we’ll render (covers all groups/days)
  all_sign_ins_for_cache = grouped.values.flatten
  people_ids = all_sign_ins_for_cache.map(&:person_id).compact.uniq
  people_by_id = Person.where(id: people_ids).index_by(&:id)
%>

<% grouped.each do |group_name, items| %>
  <% items ||= [] %>
  <% next if items.empty? %>

  <div class="mb-4" data-controller="toggle" data-toggle-show-text-value="Show <%= group_name %>" data-toggle-hide-text-value="Hide <%= group_name %>">
    <button class="btn btn-secondary" data-action="click->toggle#toggle">
      <span data-toggle-target="label">Show <%= group_name %></span>
      <span class="badge text-bg-light ms-2"><%= items.size %></span>
    </button>

    <div class="mt-3 card" data-toggle-target="panel" hidden>
      <%# COMPUTE GROUP TOTALS (meals served and avg time) TO SHOW IN HEADER %>
      <% grouped_days = items.group_by { |s| s.arrived_at&.to_date }.reject { |day, _| day.nil? } %>
      <% group_total_meals_served = grouped_days.sum do |day, daily_items|
           daily_unique_people = daily_items.map(&:person_id).compact.uniq.size
           notes_total = (notes_by_date[day] || []).sum { |n| n.amount.to_i }
           daily_unique_people + notes_total
         end %>
      <% per_person_minutes_group = items.group_by(&:person_id).reject { |pid, _| pid.nil? }.values.map { |arr| arr.sum { |s| s.duration_in_minutes.to_i } } %>
      <% group_avg_minutes = per_person_minutes_group.present? ? (per_person_minutes_group.sum.to_f / per_person_minutes_group.size).round : 0 %>

      <div class="card-header d-flex justify-content-between align-items-center">
        <strong><%= group_name %></strong>
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted"><%= items.size %> sign-in<%= "s" unless items.size == 1 %></span>
          <% if group_total_meals_served.positive? %>
            <span class="badge text-bg-primary">Meals served: <%= group_total_meals_served %></span>
          <% end %>
          <span class="badge text-bg-dark">Avg time: <%= group_avg_minutes %> min</span>
        </div>
      </div>

      <div class="card-body">
        <%# Group this group's sign-ins by day (newest day first). Ignore nil dates. %>
        <% items.group_by { |s| s.arrived_at&.to_date }.reject { |day, _| day.nil? }.sort_by { |day, _| day }.reverse.each do |day, daily_items| %>
          <% unique_people_count = daily_items.map(&:person_id).compact.uniq.size %>
          <% day_notes   = (notes_by_date[day] || []) %>
          <% notes_total = day_notes.sum { |n| n.amount.to_i } %>
          <% meals_served = unique_people_count + notes_total %>
          <%# Average time per guest for the day %>
          <% per_person_minutes = daily_items.group_by(&:person_id).reject { |pid, _| pid.nil? }.values.map { |arr| arr.sum { |s| s.duration_in_minutes.to_i } } %>
          <% avg_minutes = per_person_minutes.present? ? (per_person_minutes.sum.to_f / per_person_minutes.size).round : 0 %>

          <div class="mb-3" data-controller="toggle"
               data-toggle-show-text-value="Show <%= day.strftime('%a %d %b %Y') %>"
               data-toggle-hide-text-value="Hide <%= day.strftime('%a %d %b %Y') %>">
            <button class="btn btn-outline-secondary w-100 text-start d-flex justify-content-between align-items-center"
                    data-action="click->toggle#toggle">
              <span data-toggle-target="label">
                Show <%= day.strftime("%a %d %b %Y") %>
              </span>
              <span>
                <span class="badge text-bg-light me-2"><%= daily_items.size %> sign-ins</span>
                <span class="badge text-bg-info me-2">People: <%= unique_people_count %></span>
                <% if notes_total.positive? %>
                  <span class="badge text-bg-secondary me-2">Notes: <%= notes_total %></span>
                <% end %>
                <% if meals_served.positive? %>
                  <span class="badge text-bg-primary me-2">Meals served: <%= meals_served %></span>
                <% end %>
                <span class="badge text-bg-dark">Avg time: <%= avg_minutes %> min</span>
              </span>
            </button>

            <div class="mt-2 card" data-toggle-target="panel" hidden>
              <div class="table-responsive">
                <table class="table table-sm mb-0 align-middle">
                  <thead>
                    <tr>
                      <th>Person</th>
                      <th>Arrived</th>
                      <th>Left</th>
                      <th class="text-end">Duration (min)</th>
                      <th class="text-end">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% daily_items.each do |sign_in| %>
                      <% person = people_by_id[sign_in.person_id] || sign_in.person || Person.find_by(id: sign_in.person_id) %>
                      <tr id="<%= dom_id(sign_in) %>">
                        <td>
                          <% if person.present? %>
                            <%= link_to person.name, reports_person_sign_ins_path(person) %>
                            <% if person.archived? %>
                              <span class="badge text-bg-secondary ms-1">Archived</span>
                            <% end %>
                          <% else %>
                            <%= link_to person.name, reports_person_sign_ins_path(person) %>
                          <% end %>
                        </td>
                        <td>
                          <% if sign_in.arrived_at.present? %>
                            <%= sign_in.arrived_at.strftime("%d/%m/%Y %H:%M") %>
                          <% else %>
                            <span class="text-muted">—</span>
                          <% end %>
                        </td>
                        <td>
                          <% if sign_in.left_at.present? %>
                            <%= sign_in.left_at.strftime("%d/%m/%Y %H:%M") %>
                          <% else %>
                            <span class="badge text-bg-success">Still Present</span>
                          <% end %>
                        </td>
                        <td class="text-end"><%= sign_in.duration_in_minutes || 0 %></td>
                        <td class="text-end d-flex justify-content-end gap-2">
                          <% if person.present? %>
                            <%= link_to "Edit", edit_guest_path(person), class: "btn btn-sm btn-outline-primary" %>
                          <% end %>
                          <%= button_to "Delete",
                                        sign_in_path(sign_in),
                                        method: :delete,
                                        data: { turbo_confirm: "Delete this sign-in#{ " for #{person.name}" if person }?" },
                                        class: "btn btn-sm btn-outline-danger" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>

              <hr class="my-3">

              <h6 class="mb-2">Notes for <%= day.strftime("%a %d %b %Y") %></h6>
              <% if day_notes.any? %>
                <ul class="list-unstyled mb-0">
                  <% day_notes.each do |n| %>
                    <li>
                      <span class="text-muted"><%= n.created_at.strftime("%H:%M") %></span>
                      — <%= n.info %>
                      <% if n.amount.present? %>
                        <span class="badge text-bg-secondary ms-1">+<%= n.amount %></span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted mb-0">No notes.</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

