<h1>History</h1>

<%
  year_start = Time.current.beginning_of_year
  relevant_sign_ins = SignIn.includes(:person).where("arrived_at >= ?", year_start)
  total_signins = relevant_sign_ins.count
  total_individuals = relevant_sign_ins.map(&:person_id).uniq.compact.size
  total_meals = relevant_sign_ins.select(&:meal_served?).size
%>
<div class="alert alert-info mb-4">
  <strong>The Year so far:</strong>
  <span class="me-3">Total Sign-ins: <%= total_signins %></span>
  <span class="me-3">Total Individuals: <%= total_individuals %></span>
  <span>Total Meals Served: <%= total_meals %></span>
</div>
  <!-- Toggle: Everyone -->
  <div data-controller="toggle" class="mb-4">
    <button class="btn btn-secondary" data-action="click->toggle#toggle">
      <span data-toggle-target="label">Show/edit people</span>
    </button>

    <div class="mt-3 card card-body" data-toggle-target="panel" hidden>
      <h2 class="h5 mb-3">Everyone</h2>

      <% if defined?(@people) && @people.present? %>
        <ul class="list-group">
          <% @people.each do |person| %>
            <li class="list-group-item d-flex align-items-center justify-content-between">
              <div class="d-flex align-items-center gap-2">
                <strong>
                  <%= link_to person.name, reports_person_sign_ins_path(person), class: "text-decoration-none" %>
                </strong>
                <% if person.archived? %>
                  <span class="badge text-bg-secondary">Archived</span>
                <% end %>
              </div>
              <div class="d-flex gap-2">
                <%= link_to "Edit", edit_guest_path(person), class: "btn btn-sm btn-outline-primary" %>
                <% if person.archived? %>
                  <%= button_to "Unarchive",
                                unarchive_guest_path(person),
                                method: :patch,
                                class: "btn btn-sm btn-success",
                                data: { turbo_confirm: "Unarchive #{person.name}?" } %>
                <% else %>
                  <%= button_to "Archive",
                                archive_guest_path(person),
                                method: :patch,
                                class: "btn btn-sm btn-outline-warning",
                                data: { turbo_confirm: "Archive #{person.name}? They will be hidden from guest lists but still searchable." } %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">No people found.</p>
      <% end %>
    </div>
  </div>

<%# Notes grouped by day for meals-served totals (nil-safe) %>
<% notes_by_date = Note.all.group_by { |n| n.created_at&.to_date } %>

<%
  grouped = SignIn.includes(:person).order(arrived_at: :desc).group_by(&:category_label)
  category_order = [
    "Frypan Warriors",
    "Working Group",
    "Bible Study",
    "Board Meetings",
    "Smart Lunch",
    "Activities",
    "Bathurst Buddies",
    "Community Gardens",
    "Music BUSS",
    "Cafe",
    "Misc/Unknown"
  ]
  grouped = grouped.sort_by { |cat, _| category_order.index(cat) || 999 }
%>

<% grouped.each do |category, items| %>
  <% next if items.empty? %>
  <div class="mb-4" data-controller="toggle" data-toggle-show-text-value="Show <%= category %>" data-toggle-hide-text-value="Hide <%= category %>">
    <button class="btn btn-secondary" data-action="click->toggle#toggle">
      <span data-toggle-target="label">Show <%= category %></span>
      <span class="badge text-bg-light ms-2"><%= items.size %></span>
    </button>

    <div class="mt-3 card" data-toggle-target="panel" hidden>
      <% grouped_days = items.group_by { |s| s.arrived_at&.to_date }.reject { |day, _| day.nil? } %>
      <% group_total_meals_served = items.select(&:meal_served?).size %>
<%
  # For average with volunteers (existing logic)
  per_person_minutes_group = items.group_by(&:person_id).reject { |pid, _| pid.nil? }.values.map { |arr| arr.sum { |s| s.duration_in_minutes.to_i } }
  group_avg_minutes = per_person_minutes_group.present? ? (per_person_minutes_group.sum.to_f / per_person_minutes_group.size).round : 0

  # For average excluding volunteers
  non_vol_items = items.reject { |s| s.person&.volunteer? }
  per_person_minutes_group_no_vol = non_vol_items.group_by(&:person_id).reject { |pid, _| pid.nil? }.values.map { |arr| arr.sum { |s| s.duration_in_minutes.to_i } }
  group_avg_minutes_no_vol = per_person_minutes_group_no_vol.present? ? (per_person_minutes_group_no_vol.sum.to_f / per_person_minutes_group_no_vol.size).round : 0
%>
<div class="card-header d-flex justify-content-between align-items-center">
  <strong><%= category %></strong>
  <div class="d-flex align-items-center gap-2">
    <span class="text-muted"><%= items.size %> sign-in<%= "s" unless items.size == 1 %></span>
    <% if group_total_meals_served.positive? %>
      <span class="badge text-bg-primary">Meals served: <%= group_total_meals_served %></span>
    <% end %>
    <span class="badge text-bg-dark" title="Includes volunteers">Avg time: <%= group_avg_minutes %> min</span>
    <span class="badge text-bg-info" title="Excludes volunteers">Avg (no volunteers): <%= group_avg_minutes_no_vol %> min</span>
  </div>
</div>


      <div class="card-body">
        <% items.group_by { |s| s.arrived_at&.to_date }.sort_by { |day, _| day }.reverse.each do |day, daily_items| %>
          <% unique_people_count = daily_items.map(&:person_id).compact.uniq.size %>
          <% day_notes   = (notes_by_date[day] || []) %>
          <% notes_total = day_notes.sum { |n| n.amount.to_i } %>
          <% meals_served = daily_items.select(&:meal_served?).size + notes_total %>
          <% per_person_minutes = daily_items.group_by(&:person_id).reject { |pid, _| pid.nil? }.values.map { |arr| arr.sum { |s| s.duration_in_minutes.to_i } } %>
          <% avg_minutes = per_person_minutes.present? ? (per_person_minutes.sum.to_f / per_person_minutes.size).round : 0 %>

          <div class="mb-3" data-controller="toggle"
               data-toggle-show-text-value="Show <%= day.strftime('%a %d %b %Y') %>"
               data-toggle-hide-text-value="Hide <%= day.strftime('%a %d %b %Y') %>">
            <button class="btn btn-outline-secondary w-100 text-start d-flex justify-content-between align-items-center"
                    data-action="click->toggle#toggle">
              <span data-toggle-target="label">
                Show <%= day.strftime("%a %d %b %Y") %>
              </span>
              <span>
                <span class="badge text-bg-light me-2"><%= daily_items.size %> sign-ins</span>
                <span class="badge text-bg-info me-2">People: <%= unique_people_count %></span>
                <% if notes_total.positive? %>
                  <span class="badge text-bg-secondary me-2">Notes: <%= notes_total %></span>
                <% end %>
                <% if meals_served.positive? %>
                  <span class="badge text-bg-primary me-2">Meals served: <%= meals_served %></span>
                <% end %>
                <span class="badge text-bg-dark">Avg time: <%= avg_minutes %> min</span>
              </span>
            </button>

            <div class="mt-2 card" data-toggle-target="panel" hidden>
              <div class="table-responsive">
                <table class="table table-sm mb-0 align-middle">
                  <thead>
                    <tr>
                      <th>Person</th>
                      <th class="text-end">Sign In</th>
                      <th class="text-end">Sign Out</th>
                      <th class="text-end">Duration (min)</th>
                      <th class="text-end">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% daily_items.each do |sign_in| %>
                      <% person = sign_in.person %>
                      <tr id="<%= dom_id(sign_in) %>">
                        <td>
                          <% if person.archived? %>
                            <%= link_to person.name, reports_person_sign_ins_path(person) %>
                            <span class="badge text-bg-secondary ms-1">Archived</span>
                          <% else %>
                            <%= link_to person.name, reports_person_sign_ins_path(person) %>
                          <% end %>
                        </td>
                        <td class="text-end">
                          <%= sign_in.arrived_at&.in_time_zone&.strftime("%-I:%M %p") %>
                        </td>
                        <td class="text-end">
                          <%= sign_in.left_at ? sign_in.left_at.in_time_zone.strftime("%-I:%M %p") : "" %>
                        </td>
                        <td class="text-end"><%= sign_in.duration_in_minutes.to_i %></td>
                        <td class="text-end d-flex justify-content-end gap-2">
                          <% if person.present? %>
                            <%= link_to "Edit", edit_guest_path(person), class: "btn btn-sm btn-outline-primary" %>
                          <% end %>
                          <%= button_to "Delete",
                                        sign_in_path(sign_in),
                                        method: :delete,
                                        data: { turbo_confirm: "Delete this sign-in#{ " for #{person.name}" if person }?" },
                                        class: "btn btn-sm btn-outline-danger" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

